<% layout("/layouts/boilerplate") %>

<style>
    /* =========================================
        Fantastic Animated Background
    ========================================= */
    body {
        background: linear-gradient(-45deg, #0f0c29, #302b63, #24243e, #1a1a2d);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
    }

    @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    /* =========================================
        Parallax Container and Card Styling
    ========================================= */

    /* This is the main wrapper for positioning and event listening */
    .parallax-wrapper {
        position: relative;
        perspective: 1000px;
        /* Make the container listen for mousemove across the whole area */
        display: block;
    }

    /* This is NOW JUST the visual, tilting background card */
    .card-visuals {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(30, 30, 60, 0.4);
        border-radius: 15px;
        border: 1px solid rgba(142, 0, 255, 0.2);
        box-shadow: 0 15px 35px rgba(0,0,0,0.5);
        backdrop-filter: blur(10px);
        transform-style: preserve-3d;
        transition: transform 0.1s ease-out;
        z-index: 1; /* Sits behind the form */
    }

    /* This is the form content, which will NOT move */
    .form-content {
        position: relative; /* Sits on top */
        padding: 40px; /* Add padding since it's no longer inside a styled box */
        z-index: 2; /* Sits in front of the visuals */
    }


    /* =========================================
        Title with Icon â€” Cool Neon Glow Effect
    ========================================= */
    .forgot-password-title {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 14px;
        color: #fff;
        font-weight: 800;
        font-size: 1.6rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        text-shadow:
            0 0 10px #8e00ff,
            0 0 20px #8e00ff,
            0 0 40px #4e00ff,
            0 0 60px rgba(142, 0, 255, 0.8);
        animation: titleGlow 2s ease-in-out infinite alternate;
    }

    .forgot-password-title i {
        font-size: 1.8rem;
        color: #ff79c6;
        text-shadow: 0 0 15px #ff79c6, 0 0 30px #ff00ff;
        animation: iconPulse 1.8s ease-in-out infinite alternate;
    }

    @keyframes titleGlow {
        from { text-shadow: 0 0 10px #8e00ff, 0 0 20px #8e00ff; }
        to { text-shadow: 0 0 25px #ff79c6, 0 0 50px #8e00ff; }
    }

    @keyframes iconPulse {
        from { transform: scale(1); }
        to { transform: scale(1.2); }
    }

    /* =========================================
        Enhanced Input and Button Styles
    ========================================= */
    .input-group input {
        background: rgba(255, 255, 255, 0.08) !important;
        border: 1px solid rgba(142, 0, 255, 0.4);
        color: #ffffff !important;
        padding: 12px 15px;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
        width: 100%;
        caret-color: #ff79c6;
    }

    .input-group input::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .input-group input:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: #8e00ff;
        box-shadow:
            0 0 10px #8e00ff,
            0 0 25px rgba(142, 0, 255, 0.6),
            inset 0 0 10px rgba(142, 0, 255, 0.4);
        transform: scale(1.02);
    }

    /* =========================================
        Beautiful Gradient Button
    ========================================= */
    .btn {
        background: linear-gradient(90deg, #8e2de2, #4a00e0);
        border: none;
        color: #fff;
        padding: 14px 0;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 50px;
        cursor: pointer;
        letter-spacing: 1px;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(120deg, rgba(255, 255, 255, 0.4), transparent);
        transition: all 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow:
            0 0 15px #8e2de2,
            0 0 40px #4a00e0;
    }
</style>

<div class="row">
    <div class="col-md-4 offset-md-4">
        
        <div class="parallax-wrapper">

            <div class="card-visuals"></div>
            
            <div class="form-content">
                <div class="toggle mb-4">
                    <h2 class="forgot-password-title">
                        <i class="fas fa-key"></i>
                        <span>Password Recovery</span>
                    </h2>
                </div>

                <p class="small-text" style="margin-bottom: 25px; text-align: center; color: rgba(255,255,255,0.7);">
                    Enter your email address and we will send you a link to reset your password.
                </p>
                
                <form method="POST" action="/api/users/request-reset" class="needs-validation" novalidate>
                    <div class="input-group">
                        <label for="email" class="form-label" style="color:#fff;">Email Address</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter your registered email address"
                            required
                        />
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>

                    <div class="row mt-4">
                        <button type="submit" class="btn fullwidth">Send Reset Link</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // The container that listens for mouse movement. 
        // We listen on the whole document for a smoother, window-wide effect.
        const container = document.querySelector('.parallax-wrapper');
        
        // The card that will be visually transformed
        const cardVisual = document.querySelector('.card-visuals');

        // Mouse Move Effect - USING THE ORIGINAL LOGIC
        document.body.addEventListener('mousemove', (e) => {
            // This calculation is relative to the entire window, giving the desired "floaty" effect
            const xAxis = (window.innerWidth / 2 - e.pageX) / 25;
            const yAxis = (window.innerHeight / 2 - e.pageY) / 25;

            // Apply the transform ONLY to the visual background card
            cardVisual.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
        });

        // We listen on the container to reset the effect when the mouse leaves the card area
        container.addEventListener('mouseenter', () => {
            cardVisual.style.transition = 'none';
        });

        container.addEventListener('mouseleave', () => {
            cardVisual.style.transition = 'transform 0.5s ease';
            cardVisual.style.transform = `rotateY(0deg) rotateX(0deg)`;
        });
    });
</script>