  font-size: 2.4rem;
  margin-bottom: 12px;
}
.stat-number {
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 6px;
}
.stat-label {
  font-size: 0.85rem;
  color: #b2bec3;
  text-transform: uppercase;
  letter-spacing: 0.7px;
}

/* Equal box sizing */
.square { grid-row: span 1; }
.rectangle { grid-row: span 1; }

/* Top row layout */
.wide-top {
  grid-column: 1 / span 3;
}
.top-square-1 { grid-column: 4 / span 1; }
.top-square-2 { grid-column: 5 / span 1; }
.top-square-3 { grid-column: 6 / span 1; }
.top-square-4 { display: none; } /* keep 3 small squares aligned */

/* Bottom row layout */
.bot-square-1 { grid-column: 1 / span 1; }
.bot-square-2 { grid-column: 2 / span 1; }
.bot-square-3 { grid-column: 3 / span 1; }
.wide-bottom {
  grid-column: 4 / span 3;
}

/* Make all squares same size */
.top-square-1, .top-square-2, .top-square-3,
.bot-square-1, .bot-square-2, .bot-square-3 {
  aspect-ratio: 1 / 1;
}

/* Responsive */
@media (max-width: 900px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto;
  }
  .wide-top, .wide-bottom,
  .top-square-1, .top-square-2, .top-square-3,
  .bot-square-1, .bot-square-2, .bot-square-3 {
    grid-column: 1 / -1;
  }
}
</style>
</head>
