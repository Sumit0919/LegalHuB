<style>
/* Background animation */
* { box-sizing: border-box; }
body {
  margin: 0;
  font-family: "Poppins", sans-serif;
  background: linear-gradient(-45deg, #0f0c29, #302b63, #24243e, #1a1a2d);
  background-size: 400% 400%;
  animation: gradientBG 15s ease infinite;
  color: #fff;
}
@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Section */
.stats-section {
  padding: 70px 20px;
  max-width: 1200px;
  margin: 0 auto;
}
.stats-section .title {
  text-align: center;
  font-size: 2.6rem;
  margin-bottom: 40px;
  font-weight: 700;
  text-shadow: 0 0 18px rgba(142,0,255,0.45);
}

/* Grid Layout */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-template-rows: repeat(2, 160px);
  gap: 20px;
}

/* Common Card Style */
.stat-card {
  background: rgba(30,30,60,0.42);
  border: 1px solid rgba(142,0,255,0.18);
  border-radius: 14px;
  padding: 22px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  box-shadow: 0 8px 20px rgba(0,0,0,0.45);
  transition: all 0.3s ease;
}
.stat-card:hover {
  transform: translateY(-8px) scale(1.02);
  border-color: rgba(142,0,255,0.55);
  box-shadow: 0 18px 40px rgba(142,0,255,0.18);
}
.stat-card i {
